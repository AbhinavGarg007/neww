    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_1024"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/ToolbarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SigninRegisterActivity"
            android:theme="@style/ToolbarTheme" />
        <activity
            android:name=".activity.HomeActivity"
            android:theme="@style/ToolbarTheme" />
        <activity
            android:name=".activity.EditProfileActivity"
            android:theme="@style/ToolbarTheme" />
        <activity
            android:name=".activity.ResetPasswordActivity"
            android:theme="@style/ToolbarTheme" />
        <activity
            android:name=".activity.FeedsActivity"
            android:theme="@style/ToolbarTheme" />
        <activity
            android:name=".activity.SelectProductActivity"
            android:theme="@style/ToolbarTheme" />
        <activity
            android:name=".activity.EmptyShoppingBagActivity"
            android:theme="@style/ToolbarTheme" />
        <activity
            android:name=".activity.ShoppingBagActivity"
            android:theme="@style/ToolbarTheme" />
        <activity
            android:name=".activity.PaymentActivity"
            android:theme="@style/ToolbarTheme"></activity>
        <activity
            android:name=".activity.PaymentSuccessfulActivity"
            android:theme="@style/ToolbarTheme" />
        <activity
            android:name=".activity.TrackOrderActivity"
            android:theme="@style/ToolbarTheme" ></activity>
    </application>

</manifest>