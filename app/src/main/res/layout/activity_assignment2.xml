<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Assignment.Assignment2"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_blue">

        <ImageView
            android:layout_width="@dimen/width_20"
            android:layout_height="@dimen/height_20"
            android:background="@drawable/menu"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ourValues_label"
            android:textColor="@android:color/white"

            />
        <ImageView
            android:layout_width="@dimen/width_20"
            android:layout_height="@dimen/height_20"
            android:background="@drawable/add"/>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/parent_bg"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_40"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_20"
            android:background="@drawable/child_view"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/height_10">

                <ImageView
                    android:layout_width="@dimen/width_100"
                    android:layout_height="@dimen/height_100"
                    android:background="@drawable/parent_without_shadow"
                    />

                <TextView
                    android:id="@+id/textview_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="New Child"
                    android:textStyle="bold"
                    android:textSize="@dimen/textsize_20"/>
                <TextView
                    android:id="@id/textview_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_1"
                    android:layout_centerHorizontal="true"
                    android:text="3:30 p.m. - 8:00 p.m."
                    android:layout_alignLeft="@id/textview_1"
                    android:layout_marginBottom="@dimen/height_20"/>

                <TextView
                    android:id="@+id/textview_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textview_2"
                    android:layout_alignLeft="@id/textview_2"
                    android:text="Until finalized"
                    android:textColor="@color/color_red"
                    />



                <ImageView
                    android:layout_width="@dimen/width_30"
                    android:layout_height="@dimen/height_30"
                    android:background="@drawable/ic_settings"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"


                />

            <TextView
                android:id="@id/textview_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:gravity="center"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/width_50"
            android:layout_height="@dimen/height_50"
            android:background="@drawable/ic_logout"
            android:layout_below="@+id/frame"
            android:layout_alignLeft="@id/frame"
            />
        <ImageView
            android:layout_width="@dimen/width_50"
            android:layout_height="@dimen/height_50"
            android:background="@drawable/ic_share"
            android:layout_below="@+id/frame"
            android:layout_alignRight="@+id/frame"/>
    </RelativeLayout>



</LinearLayout>