<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/margin_20"
            android:layout_height="@dimen/margin_20"
            />


    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
    <ImageView
        android:layout_width="@dimen/margin_150"
        android:layout_height="@dimen/margin_150"
        android:src="@drawable/maccabi_logo_splash"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to the Community"
            android:textColor="@color/color_dark_blue"
            android:textStyle="bold"
            android:textSize="31sp"
            android:gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_20">
             
            <TextView
                android:id="@+id/tv_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="@dimen/textsize_20"
                android:layout_marginBottom="@dimen/margin_10"
                android:textColor="@color/color_dark_blue"/>
            <TextView
                android:id="@+id/tv_mail_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignRight="@id/tv_mail"
                android:textSize="@dimen/textsize_20"
                android:textColor="@color/color_dark_blue"/>
            <TextView
                android:id="@+id/tv_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_below="@+id/tv_mail"
                android:textSize="@dimen/textsize_20"
                android:textColor="@color/color_dark_blue"/>
            <TextView
                android:id="@+id/tv_first_name_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignRight="@id/tv_first_name"
                android:layout_below="@+id/tv_mail"
                android:textSize="@dimen/textsize_20"
                android:textColor="@color/color_dark_blue"/>
            <TextView
                android:id="@+id/tv_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_below="@+id/tv_first_name"
                android:textSize="@dimen/textsize_20"
                android:textColor="@color/color_dark_blue"/>
            <TextView
                android:id="@+id/tv_last_name_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignRight="@id/tv_last_name"
                android:layout_below="@+id/tv_first_name"
                android:textSize="@dimen/textsize_20"
                android:textColor="@color/color_dark_blue"/>
            <TextView
                android:id="@+id/tv_phone_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone number"
                android:layout_below="@+id/tv_last_name"
                android:textSize="@dimen/textsize_20"
                android:textColor="@color/color_dark_blue"/>
            <TextView
                android:id="@+id/tv_phone_no_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignRight="@id/tv_phone_no"
                android:layout_below="@+id/tv_last_name"
                android:textSize="@dimen/textsize_20"
                android:textColor="@color/color_dark_blue"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>