<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View_img"
    android:orientation="vertical"

    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:background="@color/color_black"
            android:layout_marginTop="@dimen/margin_20"
            android:src="@drawable/view_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Original Image"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textsize_20" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        >
        <ImageView
            android:id="@+id/imageview_fitxy"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin_20"
            android:background="@color/color_black"
            android:src="@drawable/view_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scale Type fitXY"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textsize_20"
            android:layout_alignLeft="@+id/imageview_fitxy"
            android:textStyle="bold"
            android:layout_below="@id/imageview_fitxy"/>

        <ImageView
            android:id="@+id/imageview_center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="center"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_alignParentRight="true"
            android:background="@color/color_black"
            android:src="@drawable/view_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scale Type Center"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textsize_20"
            android:textStyle="bold"
            android:layout_marginLeft="210sp"
            android:layout_below="@id/imageview_center"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        >
        <ImageView
            android:id="@+id/imageview_centercrop"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="@dimen/margin_20"
            android:background="@color/color_black"
            android:scaleType="centerCrop"
            android:src="@drawable/view_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scale Type Centercrop"
            android:layout_alignRight="@id/imageview_centercrop"
            android:textStyle="bold"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textsize_20"
            android:layout_below="@id/imageview_centercrop"/>
        <ImageView
            android:id="@+id/imageview_matrix"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_alignParentRight="true"
            android:background="@color/color_black"
            android:scaleType="matrix"
            android:src="@drawable/view_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scale Type matrix"
            android:textColor="@color/color_black"
            android:textStyle="bold"
            android:textSize="@dimen/textsize_20"
            android:layout_marginLeft="210sp"
            android:layout_below="@id/imageview_matrix"/>
    </RelativeLayout>



</LinearLayout>