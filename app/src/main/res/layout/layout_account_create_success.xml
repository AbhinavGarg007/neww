<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_bg_girl"
    android:orientation="vertical"
    android:padding="@dimen/margin_20"
    android:id="@+id/layout_success">


    <ImageView
        android:layout_width="@dimen/margin_100"
        android:layout_height="@dimen/margin_100"
        android:background="@drawable/drawable_circle"
        android:src="@drawable/ic_tick_white_24dp"
        android:layout_gravity="center"
        android:contentDescription="@string/account_created_successfully"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_created_successfully"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textsize_18"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_your_email_address"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textsize_18"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/we_have_sent_you_the_instructions"
        android:textColor="@android:color/white"
        android:layout_marginBottom="@dimen/margin_10"
        android:gravity="center"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/please_continue_after_confirm_your_email_address"
        android:textColor="@android:color/white"
        android:layout_gravity="center"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_continue"
        style="@style/SimpleButtonStyle"
        android:text="@string/cont"
        android:layout_marginBottom="@dimen/margin_10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resend_email"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        />


</LinearLayout>