<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomView.CandleView">

    <EditText
        android:id="@+id/et_even_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_the_digit_multiple_of_2"
        android:textColorHint="@android:color/darker_gray"
        />

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/click_me"
        android:textColor="@android:color/white"
        android:background="@color/color_black"/>

    <FrameLayout
        android:id="@+id/candle_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textsize_50"
            />
        <com.example.emp354.linear.CustomView.MyView
            android:id="@+id/myview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </FrameLayout>

</LinearLayout>