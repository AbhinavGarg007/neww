<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_20"
        android:paddingBottom="@dimen/margin_20"
        android:paddingStart="@dimen/margin_10"
        android:paddingEnd="@dimen/margin_10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_120"
                android:background="@color/color_grey_light"
                android:src="@drawable/cloth_1"
                android:scaleType="fitXY"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forever 21 Black Dress"/>
            <TextView
                android:id="@+id/tv_description_add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Silicon in black color"
                android:textSize="@dimen/textsize_12"
                />
            <TextView
                android:id="@+id/tv_quantity_add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size Free Size Quantity: 1"
                android:textSize="@dimen/textsize_12"
                />
            <TextView
                android:id="@+id/tv_sold_by_add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sold by: Classic Hat Store Pvt. Ltd."
                android:textSize="@dimen/textsize_12"
                />
            <TextView
                android:id="@+id/tv_quantity_stock_add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Only 2 in stock"
                android:textColor="@color/color_face"
                android:textSize="@dimen/textsize_12"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_new_price_add_to_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 65.00"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingBottom="@dimen/margin_10"
                    android:paddingEnd="@dimen/margin_10"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv_old_price_add_to_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize_12"
                    android:layout_marginRight="@dimen/margin_5"
                    android:text="$ 85.00"
                    />
                <TextView
                    android:id="@+id/tv_discount_add_to_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(29% off)"
                    android:textSize="@dimen/textsize_12"
                    android:textColor="@color/color_discount"/>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@color/color_grey_light"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_2"
        android:paddingBottom="@dimen/margin_2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/margin_8"
            android:gravity="center">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="@string/remove"
               android:drawablePadding="@dimen/margin_10"
               android:drawableStart="@drawable/ic_delete"/>
        </LinearLayout>

        <View
            android:layout_width="@dimen/margin_2"
            android:layout_height="match_parent"
            android:background="@color/color_grey_light"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/margin_8"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/edit"
                android:drawablePadding="@dimen/margin_10"
                android:drawableStart="@drawable/ic_edit_cart"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@color/color_grey_light"/>


</LinearLayout>