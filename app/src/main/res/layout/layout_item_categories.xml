<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_item_category"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_grey_light"
   >

    <LinearLayout
        android:id="@+id/layout_inner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/margin_10"
        android:paddingEnd="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_5">



    <TextView
        android:id="@+id/tv_type_category"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:text="HATS"
        android:textAllCaps="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/textsize_15"/>

    <TextView
        android:id="@+id/tv_discount_category"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:textAllCaps="true"
        android:textSize="@dimen/textsize_10"
        android:text="20% DISCOUNT FOR LADIES HATS"
        android:paddingStart="@dimen/margin_10"
        android:paddingEnd="@dimen/margin_10"
        android:gravity="center"
       />

    <ImageView
        android:id="@+id/iv_category"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:src="@drawable/category_1"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>