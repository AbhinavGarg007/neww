<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg_girl"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/margin_20">

    <EditText
        android:id="@+id/et_current_password"
        style="@style/EditTextStyle"
        android:hint="@string/enter_current_password"/>
    <EditText
        android:id="@+id/et_new_password"
        style="@style/EditTextStyle"
        android:hint="@string/enter_new_password"/>
    <EditText
        android:id="@+id/et_retype_new_password"
        style="@style/EditTextStyle"
        android:hint="@string/retype_new_password"/>

    <LinearLayout
        android:id="@+id/layout_btn_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@drawable/drawable_btn_bg"
        android:alpha="0.8">

        <Button
            android:id="@+id/btn_main_signin"
            style="@style/ButtonStyle"
            android:text="@string/cancel"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5"
            android:background="@android:color/white"/>
        <Button
            android:id="@+id/btn_main_register"
            style="@style/ButtonStyle"
            android:text="@string/update"
           />
    </LinearLayout>

</LinearLayout>