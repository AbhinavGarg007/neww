<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Draw_btn"
    android:layout_margin="@dimen/margin_20"
    android:orientation="vertical">
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEFT DRAWABLE BUTTON"
        android:textSize="@dimen/textsize_20"
        android:layout_marginTop="5dp"

        android:drawableLeft="@drawable/ic_thumb2"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RIGHT DRAWABLE BUTTON"
        android:textSize="@dimen/textsize_20"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:drawableRight="@drawable/ic_thumb2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOP DRAWABLE BUTTON"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/textsize_20"
        android:drawableTop="@drawable/ic_thumb2"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOTTOM DRAWABLE BUTTON"
        android:textSize="@dimen/textsize_20"
        android:layout_marginTop="5dp"
        android:layout_gravity="right"
        android:drawableBottom="@drawable/ic_thumb2"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_thumb2"
        android:drawableLeft="@drawable/ic_thumb2"
        android:drawableRight="@drawable/ic_thumb2"
        android:drawableBottom="@drawable/ic_thumb2"
        android:layout_gravity="bottom"
        android:layout_marginTop="5dp"
        android:text="ALL DRAWABLES WITH DRAWABLE PADING"
        android:textSize="@dimen/textsize_22"/>

</LinearLayout>