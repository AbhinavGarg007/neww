<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_header"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:background="@drawable/nav_drawer_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageview_person1"
        android:layout_width="@dimen/width_80"
        android:layout_height="@dimen/height_80"
        android:layout_margin="@dimen/margin_10"
        android:src="@drawable/ic_person_black_24dp"

        android:background="@drawable/circle_white"/>

    <ImageView
        android:id="@+id/imageview_person2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_white"
        android:src="@drawable/ic_person_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageview_person1"
        android:layout_marginRight="@dimen/margin_10"


        />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

    <LinearLayout
        android:id="@+id/layout_name"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"

        android:orientation="vertical">
    <TextView
        android:id="@+id/textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="abhinav garg"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textsize_20"
        android:textStyle="bold"
        android:layout_above="@+id/textview_mail"

        />
    <TextView
        android:id="@+id/textview_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="abhinav.g@finoit.co.in"
        android:textColor="@android:color/white"
        android:background="@color/color_red"
        android:textStyle="bold"
        android:textSize="@dimen/textsize_20"
        />
    </LinearLayout>
    <Spinner
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

    </Spinner>
    </LinearLayout>


</RelativeLayout>