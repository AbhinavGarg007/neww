<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context=".DatabaseAssignmentMaccabi.MaccabiRegisterLogin">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/width_20"
            android:layout_height="@dimen/height_20"
            android:src="@drawable/maccabi_ic_back"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"


        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/width_150"
            android:layout_height="@dimen/height_150"
            android:src="@drawable/maccabi_logo_splash"/>

        <LinearLayout
            android:id="@+id/layout_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_20"
            android:orientation="vertical"
            >
            <EditText
                android:id="@+id/et_mail_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Id"
                android:drawableRight="@drawable/ic_tick"
                android:textSize="@dimen/textsize_15"/>
            <EditText
                android:id="@+id/et_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:textSize="@dimen/textsize_15"/>
            <EditText
                android:id="@+id/et_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:textSize="@dimen/textsize_15"/>
            <EditText
                android:id="@+id/et_phone_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone number"
                android:textSize="@dimen/textsize_15"/>
            <EditText
                android:id="@+id/et_signup_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your password"
                android:textSize="@dimen/textsize_15"/>
            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm password"
                android:textSize="@dimen/textsize_15"
                android:layout_marginBottom="@dimen/margin_10"/>
            <Button
                android:id="@+id/btn_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_pink_corner"
                android:text="SIGN UP"
                android:textColor="@android:color/white"/>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_20"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/you_are_already_a_member_of_maccabi_usa"
                android:textColor="@color/color_dark_blue"
                android:layout_marginBottom="@dimen/margin_20"
                android:focusableInTouchMode="true"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="@dimen/textsize_15"/>

            <EditText
                android:id="@+id/et_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your password"
               android:textSize="@dimen/textsize_18"
                android:layout_marginBottom="@dimen/margin_40"
                android:drawableRight="@drawable/ic_question_mark"/>
            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_pink_corner"
                android:text="LOG IN"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>