<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Assignment.Child_view"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_blue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <ImageView
            android:layout_width="@dimen/width_20"
            android:layout_height="@dimen/height_20"
            android:background="@drawable/menu"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ourValues_label"
            android:textColor="@android:color/white" />
            </LinearLayout>
        <ImageView
            android:layout_width="@dimen/width_20"
            android:layout_height="@dimen/height_20"
            android:background="@drawable/add"
            android:layout_alignParentRight="true"
           android:layout_marginRight="@dimen/margin_20"
            />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>




    <RelativeLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/parent_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_40"
            android:background="@drawable/child_view"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="@dimen/height_10">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="@dimen/width_100"
                    android:layout_height="@dimen/height_100"
                    android:background="@drawable/parent_without_shadow" />
                    <ImageView
                        android:layout_width="@dimen/width_30"
                        android:layout_height="@dimen/height_30"
                        android:background="@drawable/circle_white"
                        android:padding="2dp"
                        android:src="@drawable/lock_gray"
                        android:layout_alignBottom="@+id/iv_1"
                        android:layout_alignRight="@+id/iv_1"
                        />

                </RelativeLayout>

                <TextView
                    android:id="@+id/textview_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="New Child"
                    android:textSize="@dimen/textsize_20"
                    android:textStyle="bold" />

                <TextView
                    android:id="@id/textview_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/textview_1"
                    android:layout_below="@+id/textview_1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/height_10"
                    android:text="3:30 p.m. - 8:00 p.m." />

                <TextView
                    android:id="@+id/textview_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/textview_2"
                    android:layout_below="@id/textview_2"
                    android:text="Until finalized"
                    android:textColor="@color/color_red" />


                <ImageView
                    android:layout_width="@dimen/width_30"
                    android:layout_height="@dimen/height_30"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/ic_settings" />
            </RelativeLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:background="@android:color/darker_gray" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="@dimen/margin_10"
                android:gravity="center">

                <TextView
                    android:id="@id/textview_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/color_black" />

                <ImageView
                    android:layout_width="@dimen/width_20"
                    android:layout_height="@dimen/height_20"
                    android:src="@drawable/side_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@id/textview_4" />
            </RelativeLayout>




            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:background="@android:color/darker_gray" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="@dimen/margin_10"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textview_5"
                        android:textColor="@color/color_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textview_6"
                        android:textColor="@color/color_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textview_7"
                        android:textColor="@color/color_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textview_8"
                        android:textColor="@color/color_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
            </LinearLayout>



            </LinearLayout>
        </LinearLayout>



        <ImageView
            android:layout_width="@dimen/width_50"
            android:layout_height="@dimen/height_50"
            android:layout_alignLeft="@id/frame"
            android:layout_below="@+id/frame"
            android:background="@drawable/ic_logout" />

        <ImageView
            android:layout_width="@dimen/width_50"
            android:layout_height="@dimen/height_50"
            android:layout_alignRight="@+id/frame"
            android:layout_below="@+id/frame"
            android:background="@drawable/ic_share" />
    </RelativeLayout>



</LinearLayout>